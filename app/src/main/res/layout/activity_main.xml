<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_progress_value"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginStart="19dp"
        android:textSize="20sp"
        android:text="進度條對話框(跑條版)"
        app:layout_constraintStart_toEndOf="@+id/btn_progress_circle"
        app:layout_constraintTop_toTopOf="@+id/btn_progress_circle" />

    <Button
        android:id="@+id/btn_progressBar_circle"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:textSize="20sp"
        android:text="進度條物件\n(圓圈版)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_progress_circle" />

    <Button
        android:id="@+id/btn_progressBar_value"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginStart="19dp"
        android:textSize="20sp"
        android:text="進度條物件\n(跑條版)"
        app:layout_constraintStart_toEndOf="@+id/btn_progressBar_circle"
        app:layout_constraintTop_toTopOf="@+id/btn_progressBar_circle" />

    <Button
        android:id="@+id/btn_progress_circle"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:textSize="20sp"
        android:text="進度條對話框(圓圈版)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <ProgressBar
        android:id="@+id/progressBarCircle"
        style="?android:attr/progressBarStyle"
        android:layout_width="123dp"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <ProgressBar
        android:id="@+id/progressBarValue"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="134dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

</androidx.constraintlayout.widget.ConstraintLayout>